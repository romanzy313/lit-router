{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist"]
}
