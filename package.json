{
  "name": "@romanzy/lit-router",
  "description": "Simple router for lit",
  "version": "1.0.3",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "demo": "cd ./example && npm run test",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "build:watch": "rollup --watch --config rollup.config.ts --configPlugin typescript",
    "test": "npx playwright test",
    "test:watch": "npm run test && chokidar test/**/*.{spec,test}.{js,ts} -c 'npm run test'",
    "test:report": "npx playwright show-report",
    "clean": "rimraf -rf dist/* && rimraf -rf ./*-*.tgz",
    "postinstall": "cd ./example && npm i",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run prettier-format && npm run lint && npm run build",
    "npm:pack": "npm run build && npm pack",
    "npm:publish": "npm run build && npm publish",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "dependencies": {
    "@romanzy/web-event-emitter": "^1.1.0",
    "feather-route-matcher": "^4.0.0",
    "lit": "^2.2.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.24.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@swc/core": "^1.2.215",
    "@swc/jest": "^0.2.21",
    "@types/feather-route-matcher": "^3.1.1",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "playwright": "^1.24.0",
    "playwright-watch": "^1.3.23",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.0",
    "rollup-plugin-swc": "^0.2.1",
    "typescript": "^4.7.4"
  },
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/romanzy-1612/lit-router.git"
  },
  "author": "Roman Volovoy",
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
